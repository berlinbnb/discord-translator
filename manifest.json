{
  "manifest_version": 3,
  "name": "Discord Translator Extension",
  "version": "1.0.0",
  "description": "A Chrome extension that automatically translates Discord messages",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://discord.com/*",
    "https://translate-pa.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "options_page": "options.html",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Discord Translator"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}